{
  "id": "brignext-demo",
  "description": "A project that demonstrates brignext",
  "tags": {
    "foo": "bar",
    "bat": "baz"
  },
  "secrets": {
    "FOO": "bar",
    "BAT": "baz"
  },
  "workerConfigs": {
    "myCLIWorker": {
      "events": [
        {
          "provider": "brignext-cli",
          "types": ["exec"]
        }
      ],
      "container": {
        "imagePullPolicy": "Always"
      },
      "workspaceSize": "10Gi",
      "git": {
        "cloneURL": "https://github.com/krancour/empty-testbed.git"
      },
      "kubernetes": {
        "workspaceStorageClass": "nfs"
      },
      "jobsConfig": {
        "allowPrivileged": true,
        "allowHostMounts": true
      }
    }
  }
}
