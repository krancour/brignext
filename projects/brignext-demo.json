{
  "id": "brignext-demo",
  "description": "A project that demonstrates brignext",
  "tags": {
    "foo": "bar",
    "bat": "baz"
  },
  "secrets": {
    "FOO": "bar",
    "BAT": "baz"
  },
  "workers": {
    "myCLIWorker": {
      "events": [
        {
          "provider": "brignext-cli",
          "types": ["exec"]
        }
      ],
      "container": {
        "image": {
          "repository": "brigadecore/brigade-worker",
          "tag": "v1.2.1",
          "pullPolicy": "IfNotPresent"
        }
      },
      "jobs": {
        "allowPrivileged": true,
        "allowHostMounts": true
      },
      "kubernetes": {
        "workerStorageClass": "nfs",
        "workerStorageSize": "10Gi",
        "cacheStorageClass": "nfs"
      }
    },
    "myGitHubWorker": {
      "events": [
        {
          "provider": "github",
          "types": ["push"]
        }
      ]
    },
    "myAlwaysWorker": {}
  }
}
