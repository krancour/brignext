{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "github.com/lovethedrake/drakecore/config.schema.json",

	"definitions": {

		"identifier": {
			"type": "string",
			"pattern": "^[a-z][a-z\\d-]*[a-z\\d]$",
			"minLength": 3,
			"maxLength": 50
		},

		"apiVersion": {
			"type": "string",
			"description": "The major version of the BrigNext API with which this object conforms",
			"enum": ["github.com/krancour/brignext/v2"]
		},

		"kind": {
			"type": "string",
			"description": "The type of object represented by the document",
			"enum": ["Secret"]
		},

		"objectMeta": {
			"type": "object",
			"description": "Secret metadata",
			"required": ["id"],
			"additionalProperties": false,
			"properties": {
				"id": {
					"allOf": [
						{
							"$ref": "#/definitions/identifier"
						}
					],
					"description": "A meaningful identifier for the secret"
				}
			}
		}

	},

	"title": "Secret",
	"type": "object",
	"required": ["apiVersion", "kind", "metadata", "value"],
	"additionalProperties": false,
	"properties": {
		"apiVersion": {
			"$ref": "#/definitions/apiVersion"
		},
		"kind": {
			"$ref": "#/definitions/kind"
		},
		"metadata": {
			"$ref": "#/definitions/objectMeta"
		},
		"value": {
			"type": "string",
			"description": "The secret's value"
		}
	}
}
